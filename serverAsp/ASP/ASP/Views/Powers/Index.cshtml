@model IEnumerable<ASP.DataLayer.Models.Power>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PowerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PowerDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PowerType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cooldown)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Backstory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PowerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PowerDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PowerType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cooldown)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Backstory)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
